<Window x:Class="VisualProgramming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualProgramming"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Menu DockPanel.Dock="Top" FontSize="24">
                <MenuItem Header="_File">
                    <MenuItem Header="_Exit" />
                </MenuItem>
                <MenuItem Header="_Tools">
                    <MenuItem Header="_Add condition" Name="_AddCondition" Click="_AddCondition_Click"/>
                    <MenuItem Header="_Add cycle" Name="_AddCycle" Click="_AddCycle_Click"/>
                    <MenuItem Header="_Add parameter assignment" Name="_AddParameter" Click="_AddParameter_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Label Name="PlainText" Grid.Row="1" HorizontalAlignment="Right" Width="300">
            
        </Label>
        <Viewbox Grid.Row="1">
            <Grid Name="Playground" Width="800" Height="450">
                <Grid.RowDefinitions>
                </Grid.RowDefinitions>               
            </Grid>
        </Viewbox>      
    </Grid>
</Window>
